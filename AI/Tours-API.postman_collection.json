{
  "info": {
    "name": "Tours API (NestJS) - Postman",
    "_postman_id": "a3c4d9be-1d2f-4f0a-9b7a-0c0c0c0c0c0c",
    "description": "Colecci\u00f3n de pruebas para Auth y Tours con token autom\u00e1tico.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Login (admin)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "let jsonData = pm.response.json();",
                  "if (jsonData && jsonData.access_token) {",
                  "  pm.collectionVariables.set('token', jsonData.access_token);",
                  "  console.log('Token guardado en {{token}}');",
                  "} else {",
                  "  console.warn('No se encontr\u00f3 access_token');",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/auth/login",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "auth",
                "login"
              ]
            },
            "body": {
              "mode": "raw",
              "raw": "{\"email\": \"admin@demo.com\", \"password\": \"Admin123!\"}"
            }
          }
        },
        {
          "name": "Register (editor)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/auth/register",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "auth",
                "register"
              ]
            },
            "body": {
              "mode": "raw",
              "raw": "{\"nombre\": \"Editor Demo 2\", \"email\": \"editor2@demo.com\", \"password\": \"Editor123!\"}"
            }
          }
        }
      ]
    },
    {
      "name": "Tours",
      "item": [
        {
          "name": "Crear Tour",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/tours",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "tours"
              ]
            },
            "body": {
              "mode": "raw",
              "raw": "{\"nombre\": \"Aventura Volc\\u00e1n\", \"destino\": \"Antigua\", \"descripcion\": \"Subida al volc\\u00e1n con gu\\u00eda\", \"precio\": 120.5, \"fecha_inicio\": \"2025-10-01T08:00:00.000Z\"}"
            }
          }
        },
        {
          "name": "Listar Tours",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/tours",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "tours"
              ]
            }
          }
        },
        {
          "name": "Actualizar Tour (PATCH)",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/tours/{{tourId}}",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "tours",
                "{{tourId}}"
              ]
            },
            "body": {
              "mode": "raw",
              "raw": "{\"precio\": 150.0, \"descripcion\": \"Itinerario actualizado\"}"
            }
          }
        },
        {
          "name": "Eliminar Tour",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/tours/{{tourId}}",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "tours",
                "{{tourId}}"
              ]
            }
          }
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000"
    },
    {
      "key": "token",
      "value": ""
    },
    {
      "key": "tourId",
      "value": ""
    }
  ]
}